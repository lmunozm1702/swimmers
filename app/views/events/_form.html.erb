<%= form_with(model: event, local: true) do |form| %>
    <% if event.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> 
                    prohibited this event from being saved:
            </h2>
            <ul>
                <% event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field mt-3">
        <%= form.label :event_proof, class: "form-label text-capitalize" %>
        <%= form.select :event_proof, @proof, {}, class: "form-select" %>
    </div>

    <div class="field mt-1">
        <%= form.label :event_gender, class: "form-label text-capitalize" %>
        <%= form.select :event_gender, Event.genders.keys.map {|gen| [gen.humanize, gen]}, {}, class: "form-select" %>
    </div>

    <div class="field mt-1">
        <%= form.label :event_type, class: "form-label text-capitalize" %>
        <%= form.select :event_type, Event.eventtypes.keys.map {|type| [type.humanize, type]}, {}, class: "form-select" %>
    </div>

    <div class="field mt-1">
        <%= form.label :event_date, class: "form-label text-capitalize" %>
        <%= form.date_field :event_date, class: "form-control" %>
    </div>

    <div class="field mt-1">
        <%= form.label :seed_time, class: "form-label text-capitalize" %>
        <%= form.time_field :seed_time, {class: "form-control", step: "0.001"} %>
    </div>

    <div class="field mt-1">
        <%= form.label :event_time, class: "form-label text-capitalize" %>
        <%= form.time_field :event_time, {class: "form-control", step: "0.001"} %>
    </div>

    <div class="actions">
        <%= form.submit :Save, class: "btn btn-primary mt-3" %>
        <%= link_to 'Back', events_path(@event), class: "btn btn-primary mt-3" %>
    </div>

<% end %>